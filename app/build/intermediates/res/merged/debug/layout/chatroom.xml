<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/chart_room">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:padding="3dp"
        android:focusable="true"
        android:id="@+id/return_MainScreen"
        android:focusableInTouchMode="true"
        android:layout_alignBaseline="@+id/chart_room_name"
        android:text="@string/return_label"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:padding="4dp"
        android:gravity="center"
        android:id="@id/chart_room_name"
        android:textStyle="bold"
        android:text="@string/default_name"/>
    <ListView
        android:layout_below="@id/chart_room_name"
        android:layout_above="@+id/input_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="30dp"
        android:id="@+id/chart_room_listView"
        android:clickable="false"/>
    <EditText
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@id/input_box"
        android:layout_marginLeft="3dp"
        android:textSize="18dp"
        android:hint="@string/default_message"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/sendButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/input_box"
        android:id="@id/sendButton"
        android:layout_marginRight="3dp"
        android:text="@string/default_sendMessage"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
