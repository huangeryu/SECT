<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
    android:layout_width="wrap_content">
<RelativeLayout android:id="@+id/native_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/native_time"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/colorAccent"
        android:id="@+id/native_headImage"
        android:layout_below="@id/native_time"
        android:layout_marginTop="7dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/native_name"
        android:layout_toLeftOf="@id/native_headImage"
        android:layout_below="@id/native_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/native_content"
        android:textSize="18dp"
        android:layout_below="@id/native_name"
        android:layout_toLeftOf="@id/native_headImage"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/target_item">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/target_time"
            android:gravity="center"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/colorAccent"
            android:id="@+id/target_headImage"
            android:layout_below="@id/target_time"
            android:layout_marginTop="7dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target_name"
            android:layout_toRightOf="@id/target_headImage"
            android:layout_below="@id/target_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/target_content"
            android:textSize="18dp"
            android:layout_below="@id/target_name"
            android:layout_toRightOf="@id/target_headImage"/>
    </RelativeLayout>
</FrameLayout>
