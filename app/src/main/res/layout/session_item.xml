<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/headImage"
        android:padding="3dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentLeft="true"
        android:src="@color/colorAccent"/><!--该程序还没有添加图片支持，仅测试使用-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/fontColor"
        android:padding="5dp"
        android:text="姓名:"
        android:layout_toRightOf="@id/headImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastMessage"
        android:padding="4dp"
        android:textColor="@color/fontColor"
        android:layout_alignBottom="@id/headImage"
        android:layout_toRightOf="@id/headImage"
        android:text="最新一条消息"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sessionTime"
        android:padding="5dp"
        android:textColor="@color/fontColor"
        android:text="时间"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/notice"
        android:text="1"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_alignBottom="@id/lastMessage"
        android:background="@drawable/notice_round"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
